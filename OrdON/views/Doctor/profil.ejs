<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../layouts/header'); -%>
    <title>OrdOn</title>
    <link rel="stylesheet" href="/src/css/home.css">
</head>
<style>
    @media screen and (max-width:1105px) {
        .profilBox {
            width: 100%;
        }
    }
    @media screen and (max-width:720px) {
        .darkSide {
            display: none;
        }
        .nav-profil {
            display: block;
        }
    }
    @media screen and (max-width:1105px) {
        .profilBoxGrey {
            width: 100%;
        }
    }
</style>
<body>
    <%- include('../layouts/nav/connectionManager'); -%>
   <div class="profil">
        <%- include('../layouts/profiledarknav'); -%>
       <div class="profil__right__section">
           <h2 style="color:var(--darkblue)">Mon profil</h2>
           <div class="profile__input__container">
               <input name="name"class="profilBoxGrey"  value = <%- profil.name %>  disabled>
               <input name="firstname" class="profilBoxGrey" value = <%- profil.firstname %> disabled>
               <input name="email" class="profilBoxGrey" value = <%- profil.email %>  disabled>
               <input name="city" class="profilBoxGrey" value = <%- profil.city %> disabled>
               <input name="gender" class="profilBoxGrey" value = <%- profil.gender %> disabled>
           </div> 
       </div>
   </div>
   <%- include('../layouts/footer/footerManager'); -%>
   <%- include('../layouts/scripts'); -%>
</body>
</html>